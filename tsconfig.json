{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "typeRoots": [
      "./src/@types"
    ],
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@types/*": [
        "src/@types/*"
      ],
      "@interface/*": [
        "src/interface/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}